{
	"manifest_version": 2,

	"name": "erase-prices",
	"description": "Erase all prices on obagstore.pl",
	"version": "1.0",
	"author": "Pawe≈Ç Lal",

	"browser_action": {
		"default_icon": "icon16.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"*://www.obagstore.pl/*"
	],
	"content_scripts": [
		{
			"matches": ["*://www.obagstore.pl/*"],
			"js": [
				"js/lib/jquery-3.2.1.js",
				"erasePrices.js"
			],
			"run_at": "document_start"
		}
	]
}